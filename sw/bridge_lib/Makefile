ARCH = arm
CROSS ?= arm-linux-gnueabihf-
CC = $(CROSS)gcc
PWD := $(shell pwd)

CFLAGS = \
	-std=c99 \
	-g \
	-O3 \
	-W \
	-Wall \
	-Wextra \
	-Wp,-MMD,$(dir $@).$(notdir $@).d \
	-Wp,-MT,$@ \

bins-y += sdram
bins-y += memmap

all: $(bins-y)

$(bins-y):
	$(CC) -o $@ $^

sdram: sdram.o bw_bridge.o
memmap: memmap.o bw_bridge.o

clean:
	$(RM) *.o *~ $(bins-y)

-include .*.d
